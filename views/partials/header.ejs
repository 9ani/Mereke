<header>
    <div class="logo"><a href="/">MEREKE</a></div>
    <form class="head-search">
        <input type="text" id="blogSearchInput" name="search" placeholder="Поиск по мероприятиям">
        <button >
            <i class="fa-solid fa-magnifying-glass"></i>
            Найти
        </button>
    </form>
        <% if (user._id && !user.isAdmin) { %>
            <div class="auth_buttons">

            <a href="/bookings">Mои бронирования</a>
            <a href="/api/signout" >Выход</a></div>

            </div>
        <% } else if (user._id && user.isAdmin) { %>
            <div class="auth_buttons">
            <a href="/admin/<%= user._id  %>">Админ-профиль</a>
            <a href="/api/signout">Выход</a>
            </div>
        <% } else { %>
            <div class="auth_buttons">

            <a href="/register">Регистрация</a>
            <a href="/login">Вход</a>
            </div>
        <% } %>


</header>

